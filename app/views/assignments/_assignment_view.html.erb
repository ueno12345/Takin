<%# TA割当画面の表を表示している部分 %>
<%= turbo_frame_tag work_hour do %>
  <div class="row py-2 border-top">
    <div class="col my-auto"><%= work_hour.dtstart.to_fs(:datetime_jp) %></div>
    <div class="col my-auto"><%= work_hour.dtend.to_fs(:datetime_jp) %></div>
    <div class="col my-auto"><%= work_hour.actual_working_minutes %></div>
    <div class="col my-auto"><%= assignment.teaching_assistant.name %></div>
    <div class="col my-auto">
      <%#= link_to "編集", edit_assignment_path(assignment, work_hour, course_id: assignment.course_id, assignment_id: assignment.id), method: :get, class: 'btn btn-danger', form: { style: 'display: inline' } %>
      <%= link_to "個人画面", teaching_assistant_path(assignment.teaching_assistant),class: 'btn btn-success', target: '_blank'%>
      <%= link_to "帳票出力", ta_assignment_output_csv_url(teaching_assistant_id: assignment.teaching_assistant.id), class: 'btn btn-info', target: '_blank'%>
      <%= link_to "編集", edit_course_work_hour_path(course_id: assignment.course_id, id: work_hour.id), method: :get, class: 'btn btn-primary', form: { style: 'display: inline' } %>
      <%= button_to "削除", destroy_course_assignments_path(@course, assignment, work_hour), method: :delete, class: 'btn btn-danger', form: { style: 'display: inline' }, id:'delete-buttom', form: { data: { turbo_confirm: "本当に削除しますか？" } } %>
    </div>
  </div>
<% end %>
