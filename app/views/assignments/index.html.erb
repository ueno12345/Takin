<p style="color: green"><%= notice %></p>

<h1>TA時間割当(編集)</h1>

<%= link_to "科目一覧画面へ", courses_path %>

<div>
  <span>
    <%= @course.name %>
  </span>
  担当教員: <%= @course.instructor %>
  対象年度: <%= @course.year %>
  開講学期: <%= @course.term %>
  割当可能総時間: <%= @course.time_budget %>
</div>


<table class="table table-bordered">
  <tr>
    <th>開始時刻</th>
    <th>終了時刻</th>
    <th>合計勤務時間(分)</th>
    <th>TA名</th>
    <th>TA可能割当総時間(分)</th>
    <th>操作</th>
  </tr>
  <div id="assignments">
    <% @assignments.each do |assignment| %>
        <% assignment.work_hours.each do|work_hour| %>
        <tr>
          <td>
            <%= work_hour.dtstart %>
          </td>

          <td>
            <%= work_hour.dtend %>
          </td>

          <td>
            <%= work_hour.actual_working_minutes %>
          </td>

          <td>
            <%= assignment.teaching_assistant.name %>
          </td>

          <td>
            <%= @course.time_budget %>
          </td>

          <td>
            帳票出力 <%= button_to "削除", destroy_course_assignments_path(@course, assignment, work_hour), method: :delete, data: { confirm: "本当に削除しますか？" }, class: 'btn btn-danger', form: { style: 'display: inline' } %>
          </td>
        </tr>
      <% end %>
    <% end %>
  </div>
</table>