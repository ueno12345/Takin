<%# 新規マスタデータ追加画面の個別登録のフォームを表示 %>
<%= form_with(model: course) do |form| %>
  <% if course.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(course.errors.count, "error") %> prohibited this course from being saved:</h2>

      <ul>
        <% course.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :対象年度, style: "display: block" %>
    <%= form.number_field :year %>
  </div>

  <div>
    <%= form.label :学期, style: "display: block" %>
    <%= form.text_field :term %>
  </div>

  <div>
    <%= form.label :科目番号, style: "display: block" %>
    <%= form.text_field :number %>
  </div>

  <div>
    <%= form.label :授業科目名, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :担当教員名, style: "display: block" %>
    <%= form.text_field :instructor %>
  </div>

  <div>
    <%= form.label :可能割当総時間, style: "display: block" %>
    <%= form.number_field :time_budget %>
  </div>

  <div>
    <%= form.label :備考, style: "display: block" %>
    <%= form.text_field :description %>
  </div>

  <div>
    <%= form.submit "登録" %>
  </div>
<% end %>
