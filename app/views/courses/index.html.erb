<%# 科目一覧画面を表示 %>
<div class="row">
  <div class="col-1"></div>
  <%# 科目一覧画面上部の内容 タイトル 検索 %>
  <div class="col-10">
    <% if flash[:color] == "red" %>
      <div class="red-text"><%= flash[:notice] %></div>
    <% elsif flash[:color] == "green" %>
      <div class="green-text"><%= flash[:notice] %></div>
    <% else %>
      <div><%= flash[:notice] %></div>
    <% end %>
    <div class="row">
      <%# 科目タイトルとマスタデータ関連 %>
      <div class="col-2"><h2>科目一覧画面</h2></div>
        <% if session[:admin_flag] == true %>
          <div class="col-2 d-flex align-items-center "><%= link_to "新規科目データを追加", new_course_path, class: "btn btn-outline-primary" %></div>
          <div class="col-2 d-flex align-items-center "><%= link_to "科目マスタデータ削除", index_destroy_courses_path, class: "btn btn-outline-danger" %></div>
        <% end %>
      <div class="col-6"></div>
    </div>
    <%# 検索欄 %>
    <div class="card my-3">
      <div class="card-header">
        検索欄
      </div>
      <div class="card-body">
        <form class="row g-3">
          <%= search_form_for @q, html: {class:"row g-3"} do |f| %>
            <div class="col-md-4">
              <div class="row">
                <div class="col-4"><%= f.label :year_eq, "対象年度",class: "mt-2" %></div>
                <div class="col-8"><%= f.select :year_eq, @select_years, {prompt:"対象年度を選択"},class: "form-control" %></div>
              </div>
            </div>
            <div class="col-md-4">
              <div class="row">
                <div class="col-4"><%= f.label :name_i_cont, "学期",class: "mt-2" %></div>
                <div class="col-8"><%= f.search_field :name_i_cont, placeholder: "条件を入力してください" ,class: "form-control" %></div>
              </div>  
            </div>
            <div class="col-md-4">
              <div class="row">
                <div class="col-4"><%= f.label :number_i_cont, "科目番号",class: "mt-2" %></div>
                <div class="col-8"><%= f.search_field :term_i_cont, placeholder: "条件を入力してください" ,class: "form-control" %></div>
              </div>
            </div>
            <div class="col-md-4">
              <div class="row">
                <div class="col-4"><%= f.label :grade_i_cont, "授業科目名",class: "mt-2" %></div>
                <div class="col-8"><%= f.search_field :name_i_cont, placeholder: "条件を入力してください" ,class: "form-control" %></div>
              </div>
            </div>
            <div class="col-md-4">
              <div class="row">
                <div class="col-4"><%= f.label :labo_i_cont, "担当教員", class: "mt-2" %></div>
                <div class="col-8"><%= f.search_field :instructor_i_cont, placeholder: "条件を入力してください" ,class: "form-control" %></div>
              </div>
            </div>
            <div class="col-md-4">
              <div class="row">
                <div class="col-4"><%= f.label :description_i_cont, "備考", class: "mt-2" %></div>
                <div class="col-8"><%= f.search_field :description_i_cont, placeholder: "条件を入力してください" ,class: "form-control" %></div>
              </div>
            </div>
            <div class="col-12 text-center mt-5">
              <%= f.submit "検索", class: "btn btn-primary px-4"%>
              <%= link_to "クリア", teaching_assistants_path, class: "ms-5 btn btn-danger px-3" %>
            </div>
          <% end %>
        </form>
      </div>
    </div>
  </div>
  <div class="col-1"></div>
</div>

<%# 科目一覧画面の表部分の作成 %>
<div class="row mb-3">
  <div class="col-1"></div>
  <%# TA一覧表部分 %>
  <div class="col-10">
    <div class="card">
      <div class="card-header">
        科目一覧
      </div>
      <div class="card-body m-3">
        <%# TAのカラムのヘッダー %>
        <div class="row border-bottom border-dark pb-3">
          <div class="col my-auto fw-bolder h5">対象年度</div>
          <div class="col my-auto fw-bolder h5">学期</div>
          <div class="col my-auto fw-bolder h5">講義番号</div>
          <div class="col my-auto fw-bolder h5">講義科目名</div>
          <div class="col my-auto fw-bolder h5">担当教員</div>
          <div class="col my-auto fw-bolder h5">TA可能割当総時間(分)</div>
          <div class="col my-auto fw-bolder h5">操作</div>
        </div>
        <%# TAのレコードデータ %>
        <div id="courses">
          <% @courses.each do |course| %>
            <div class="row border-bottom px-3 py-2">
              <div class="col my-auto"><%= course.year %></div>
              <div class="col my-auto"><%= course.term %></div>
              <div class="col my-auto"><%= course.number %></div>
              <div class="col my-auto"><%= course.name %></div>
              <div class="col my-auto"><%= course.instructor %></div>
              <div class="col my-auto"><%= course.time_budget  %></div>
              <div class="col my-auto d-flex d-grid gap-2 d-md-block">
                <div class="me-3">
                  <%= link_to "編集", course_assignments_path(course), class: "btn btn-primary" %>
                  <%#= link_to "帳票出力", index_output_excel_path(@teaching_assistant = teaching_assistant), target: :_blank, rel: "noopener noreferrer"  ,class: 'btn btn-info' %>
                </div>
                <div class="me-3">
                  <%= link_to "閲覧", course_path(course), class: "btn btn-success" %>
                  <%#= link_to "個人画面", teaching_assistant_path(teaching_assistant),class: 'btn btn-success' %> 
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="col-1"></div>
</div>
