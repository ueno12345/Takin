<%# 新規TAマスタデータ追加画面表示 %>
<%= form_with(model: teaching_assistant) do |form| %>
  <% if teaching_assistant.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(teaching_assistant.errors.count, "error") %> prohibited this teaching_assistant from being saved:</h2>

      <ul>
        <% teaching_assistant.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<div class="row">
    <div class="col-md-4">
      <div class="row mb-3">
        <div class="col-4"><%= form.label :対象年度, style: "display: block", class: "mt-2"  %></div>
        <div class="col-8"><%= form.number_field :year, class: "form-control" %></div>
      </div>
    </div>

    <div class="col-md-4">
      <div class="row mb-3">
        <div class="col-4"><%= form.label :学生番号, style: "display: block", class: "mt-2" %></div>
        <div class="col-8"><%= form.text_field :number, class: "form-control", maxlength: "8" %></div>
      </div>
    </div>

    <div class="col-md-4">
      <div class="row mb-3">
        <div class="col-4"><%= form.label :氏名, style: "display: block", class: "mt-2" %></div>
        <div class="col-8"><%= form.text_field :name, class: "form-control", maxlength: "128" %></div>
      </div>
    </div>

    <div class="col-md-4">
      <div class="row mb-3">
        <div class="col-4"><%= form.label :学年, style: "display: block", class: "mt-2" %></div>
        <div class="col-8"><%= form.text_field :grade, class: "form-control", maxlength: "2" %></div>
      </div>
    </div>

    <div class="col-md-4">
      <div class="row mb-3">
        <div class="col-4"><%= form.label :研究室, style: "display: block", class: "mt-2" %></div>
        <div class="col-8"><%= form.text_field :labo, class: "form-control", maxlength: "128" %></div>
      </div>
    </div>

    <div class="col-md-4">
      <div class="row mb-3">
        <div class="col-4"> <%= form.label :備考, style: "display: block", class: "mt-2" %></div>
        <div class="col-8"><%= form.text_field :description, class: "form-control", maxlength: "128" %></div>
      </div> 
    </div>

    <div class="col-12 text-center mt-5">
      <%= form.submit "登録", class: "ms-5 btn btn-primary px-4" %>
      <%= link_to "クリア", new_teaching_assistant_path, class: "ms-5 btn btn-danger px-4" %>
    </div>
  <% end %>
</div>