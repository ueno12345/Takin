<p style="color: green"><%= notice %></p>

<h1>TA一覧画面</h1>

<%= link_to "TAデータを追加", new_teaching_assistant_path %>
<%= link_to "TAデータ削除", index_destroy_teaching_assistants_path %>

<table class="table table-bordered">
  <thead class="table-primary">
    <tr>
    <th>対象年度</th>
    <th>TA名</th>
    <th>学生番号</th>
    <th>学年</th>
    <th>研究室</th>
    <th>備考</th>
    <th>操作</th>
    </tr>
  </thead>
  <tbody>
    <div id="courses">
      <% @teaching_assistants.each do |teaching_assistant| %>
        <tr>
          <td><%= teaching_assistant.year %></td>
          <td><%= teaching_assistant.name %></td>
          <td><%= teaching_assistant.number %></td>
          <td><%= teaching_assistant.grade %></td>
          <td><%= teaching_assistant.labo %></td>
          <td><%= teaching_assistant.description %></td>
          <td class="d-flex">
            <div>
            <%= link_to 'Download Excel', teaching_assistants_output_ticket_path, target: '_blank' %>

            <%= link_to "https://google.com" do %>
              <%= render partial: 'layouts/button',locals: {class_name: "output-button",button_name:"帳票出力" , url:"https://google.com", bg_color:"green", text_color:"white"} %>
            <% end %>
            </div>
            <div>
              <%= link_to teaching_assistant_path(teaching_assistant) do %>
                <%= render partial: 'layouts/button',locals: {class_name:"private-button",button_name:"個人画面" , url:"", bg_color:"blue", text_color:"white"} %>
              <% end %>
            </div>
          </td>
        </tr>
      <% end %>
    </div>
  </tbody>
</table>