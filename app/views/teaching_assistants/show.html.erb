<%# TA個人画面を表示 %>
<div class="row">
  <div class="col-1"></div>
  <div class="col-10">
    <% if flash[:color] == "red" %>
      <div class="red-text"><%= flash[:notice] %></div>
    <% elsif flash[:color] == "green" %>
      <div class="green-text"><%= flash[:notice] %></div>
    <% else %>
      <div><%= flash[:notice] %></div>
    <% end %>

    <%# TAタイトルとマスタデータ関連 %>
    <div class="row ">
      <div class="col-4"><h2>TA個人画面 : <%= @teaching_assistant.name %></h2></div>
      <div class="col-2 d-flex align-items-center">対象年度: <%= @teaching_assistant.year %></div>
      <div class="col-2 d-flex align-items-center">学年: <%= @teaching_assistant.grade %></div>
      <div class="col-2 d-flex align-items-center">学生番号: <%= @teaching_assistant.number %></div>
      <div class="col-2 d-flex align-items-center">割当総時間: 
      <% sum = 0 %>
      <% @assignments.each do|assignment| %>
        <% assignment.work_hours.each do|work_hour| %>
          <% if work_hour.nil? %>
            <% next %>
          <% else %>
            <% sum = work_hour.calc_work_hours(sum, work_hour.actual_working_minutes) %>
          <% end %>
        <% end %>
      <% end %>
      <%= sum %>
      </div>
    </div>

    <%# TA一覧画面へと帳票出力 %>
    <div class="row">
      <% if session[:admin_flag] == true %>
        <div class="col-2 d-flex align-items-center "><%= link_to "TA一覧画面へ", teaching_assistants_path, class: 'btn btn-info' %></div>
        <div class="col-2 d-flex align-items-center "><%= link_to "帳票出力画面へ", index_output_excel_path(@teaching_assistant), target: :_blank, rel: "noopener noreferrer"  ,class: 'btn btn-info' %></div>
      <% end %>
    </div>

    <%# 検索 %>
    <div class="card my-3">
      <div class="card-header">
        検索欄
      </div>
      <div class="card-body">
        <form class="row g-3">
          <%= search_form_for @q, html: {class:"row g-3"} do |f| %>
            <div class="col-md-4">
              <div class="row">
                <div class="col-4"><%= f.label :course_name_i_cont, "講義名" %></div>
                <div class="col-8"><%= f.search_field :course_name_i_cont, placeholder: "条件を入力してください" %></div>
              </div>
            </div>
            <div class="col-md-4">
              <div class="row">
                <div class="col-4"><%= f.label :course_term_i_cont, "対象学期" %></div>
                <div class="col-8"><%= f.search_field :course_term_i_cont, placeholder: "条件を入力してください" %></div>
              </div>
            </div>
            <div class="col-12 text-center mt-5">
              <%= f.submit "検索", class: "btn btn-primary px-4" %>
              <%= link_to "クリア", teaching_assistant_path(params[:id]), class: "ms-5 btn btn-danger px-3" %>
            </div>
          <% end %>
        </form>
      </div>
    </div>


  </div>
  <div class="col-1"></div>
</div>


<%#= link_to "TA一覧画面へ", teaching_assistants_path, class: 'btn btn-info' %>
<%#= link_to "帳票出力画面へ", index_output_excel_path(@teaching_assistant), target: :_blank, rel: "noopener noreferrer"  ,class: 'btn btn-info' %>

<%# TA個人画面の表部分の作成 %>
<div class="row mb-5">
  <div class="col-1"></div>
  <%# TA個人画面部分 %>
  <div class="col-10">
    <div class="card">
      <div class="card-header">
        TA一覧
      </div>
      <div class="card-body m-3">
        <%# TA個人画面のカラムのヘッダー %>
        <div class="row border-bottom border-dark pb-3">
          <div class="col my-auto fw-bolder h5">講義名</div>
          <div class="col my-auto fw-bolder h5">対象学期</div>
          <div class="col my-auto fw-bolder h5">開始時刻</div>
          <div class="col my-auto fw-bolder h5">終了時刻</div>
          <div class="col my-auto fw-bolder h5">合計勤務時間(分)</div>
        </div>
        <%# TA個人画面のレコードデータ %>
        <div id="assignments">
          <% @assignments.each do |assignment| %>
            <% assignment.work_hours.each do|work_hour| %>
            <div class="row border-bottom px-3 py-2">
              <div class="col my-auto"><%= assignment.course.name %></div>
              <div class="col my-auto"><%= assignment.course.term %></div>
              <div class="col my-auto"><%= work_hour.dtstart.to_fs(:datetime_jp) %></div>
              <div class="col my-auto"><%= work_hour.dtend.to_fs(:datetime_jp) %></div>
              <div class="col my-auto"><%= work_hour.actual_working_minutes  %></div>
            </div>
            <% end %>
          <% end %>
          </div>
        </div>
    </div>
  </div>
  <div class="col-1"></div>
</div>
