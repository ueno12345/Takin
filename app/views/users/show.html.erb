<p style="color: green"><%= notice %></p>
<div class="row">
  <div class="col-lg-1 col-md-0"></div>
  <div class="col-lg-10 col-md-12">
    <% if flash[:color] == "red" %>
      <div class="red-text"><%= flash[:notice] %></div>
    <% elsif flash[:color] == "green" %>
      <div class="green-text"><%= flash[:notice] %></div>
    <% else %>
      <div><%= flash[:notice] %></div>
    <% end %>
    <div class="row">
      <div class="col-lg-4 col-md-12"><h2>ユーザ情報</h2></div>
    </div>

    <div class="row ">
      <div class="col-lg-4 col-md-12"><%= link_to '編集', edit_user_path(@user), class: 'btn btn-outline-primary py-2' %></div>
      <div class="col-lg-6 col-md-0"><%= button_to '削除', @user, method: :delete, class: 'btn btn-outline-primary py-2' %></div>
      <div class="col-lg-2 col-md-12 d-flex align-items-center "><%= link_to '戻る', users_path, class: 'btn btn-outline-primary py-2' %></div>
    </div>

  </div>
</div>

<%= render @user %>

